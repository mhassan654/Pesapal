{
    "name": "mhassan654/laravel-pesapal-sdk",
    "description": "Laravel package to manage current pesapal payment api, can be used for web and restful apis",
    "keywords": [
        "mhassan654",
        "pesapal",
        "laravel",
        "laravel 7",
        "laravel 8",
        "laravel 9",
        "MTN",
        "Airtel",
        "payments",
        "VISA",
        "Mastercard",
        "Ezee Money"
    ],
    "homepage": "https://github.com/mhassan654/pesapal",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "MUWONGE HASSAN",
            "email": "hassansaava@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support":  "^5.5|^6.0|^7.0|^8.0|^9.0|^10.0",
        "ext-curl": "*",
      "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mhassan654\\Pesapal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mhassan654\\Pesapal\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mhassan654\\Pesapal\\PesapalServiceProvider"
            ],
            "aliases": {
                "Pesapal": "Mhassan654\\Pesapal\\PesapalFacade"
            }
        }
    }
}
